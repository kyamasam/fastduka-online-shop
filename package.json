{
  "name": "my-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "backend:dev": "cd backend && ./venv/bin/python manage.py runserver --noreload",
    "backend:dev:watch": "cd backend && ./venv/bin/python manage.py runserver",
    "backend:migrate": "cd backend && ./venv/bin/python manage.py migrate",
    "dashboard:dev": "cd dashboard && npm run dev",
    "landing:dev": "cd landing-page && npm run dev",
    "dev:all": "concurrently \"npm run backend:dev:watch\" \"npm run dashboard:dev\" \"npm run landing:dev\"",
    "prepare": "is-ci || husky install",
    "lint": "eslint --fix .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "*.py": [
      "black"
    ]
  }
}
